<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") -%>
  <style>
    body {
      background-image: url('https://images.unsplash.com/photo-1734375315815-77169cefe3d0?q=80&w=1931&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      color: #fff; 
    }
    .container {
      background: rgba(0, 0, 0, 0.7); 
      padding: 1px;
      border-radius: 10px;
    }
    label,
    h1,
    h2,
    p {
      color: #fff;
    }
  </style>
  <body>
    <%- include("../partials/navbar"); %>
    <div class="container py-5">
      <h1 class="text-center">Financing Options</h1>
      <p class="text-center">
        We offer flexible financing plans to help you own the car of your dreams.
      </p>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h2 class="text-center">Loan Eligibility Calculator</h2>
          <form id="calculator-form">
            <div class="mb-3">
              <label for="income" class="form-label">Annual Income</label>
              <input type="number" class="form-control" id="income" name="income" required />
            </div>
            <div class="mb-3">
              <label for="tenure" class="form-label">Loan Tenure (in years)</label>
              <input type="number" class="form-control" id="tenure" name="tenure" required />
            </div>
            <button type="button" class="btn btn-secondary w-100" onclick="calculateLoan()">Calculate</button>
          </form>
          <p id="result" class="mt-3 text-center text-success" style="display: none;"></p>
        </div>
      </div>

      <hr class="my-5" />

    <script>
      function calculateLoan() {
        const income = document.getElementById('income').value;
        const tenure = document.getElementById('tenure').value;

        if (income && tenure) {
          const maxLoanAmount = income * tenure * 0.5; 
          const resultText = `Based on your income, you may be eligible for a loan of approximately $${maxLoanAmount.toLocaleString()}.`;
          const resultElement = document.getElementById('result');
          resultElement.textContent = resultText;
          resultElement.style.display = 'block';
        } else {
          alert('Please fill out all fields in the calculator.');
        }
      }
    </script>
  </body>
</html>



